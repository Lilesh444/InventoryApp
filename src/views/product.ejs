
       <% if(locals.lastVisit){ %>
        <h1 class="alert alert-primary" role="alert">
        You have last visited this on:<%= locals.lastVisit %>
       </h1>
       <% } %>
        
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action </th>
                </tr>
            </thead>
            <tbody>

                <% products.forEach((product) => { %>
                    <tr>
                        <th><%= product.id %></th>
                        <td><%= product.name %></td>
                        <td><%= product.desc %></td>
                        <td scope="col"><%= product.price %></td>
                        <td>
                            <img src="<%= product.imgUrl %>" />
                        </td>
                        <td>
                            <a href="/update-product/<%=product.id %>" class="btn btn-warning">
                                Update
                            </a>
                        </td>
                        <td>
                            <button class="btn btn-warning" onclick="deleteProduct('<%= product.id %>')">Delete</button>
                        </td>
                        <!-- <td>
                            <a href="/delete-product/<%=product.id %>" class="btn btn-warning">
                                Delete
                            </a>
                        </td> -->
                    </tr>
                <% }) %>
                
              
